{
    "title": "Asset Geodata Schema",
    "description": "Schema for geospatial enrichment of infrastructure assets",
    "type": "object",
    "required": ["asset_id", "latitude", "longitude", "geocode_source", "geocode_timestamp"],
    "properties": {
        "asset_id": {
            "type": "string",
            "description": "Unique identifier for the asset",
            "pattern": "^AST-[0-9]{6}$"
        },
        "latitude": {
            "type": "number",
            "description": "Geographic latitude in decimal degrees",
            "minimum": -90.0,
            "maximum": 90.0
        },
        "longitude": {
            "type": "number",
            "description": "Geographic longitude in decimal degrees",
            "minimum": -180.0,
            "maximum": 180.0
        },
        "geocode_source": {
            "type": "string",
            "description": "Source of geocoding information",
            "enum": ["GPS", "ADDRESS_LOOKUP", "MANUAL_ENTRY", "IMPORTED", "SURVEY_DATA"]
        },
        "geocode_timestamp": {
            "type": "string",
            "description": "ISO 8601 timestamp of when geocode was added",
            "format": "date-time"
        },
        "validation_status": {
            "type": "string",
            "description": "Status of geocode validation",
            "enum": ["UNVERIFIED", "VERIFIED", "DISPUTED", "CORRECTED", "INVALID"],
            "default": "UNVERIFIED"
        },
        "accuracy_meters": {
            "type": "number",
            "description": "Estimated accuracy in meters",
            "minimum": 0
        },
        "elevation": {
            "type": "number",
            "description": "Elevation in meters above sea level (optional)"
        },
        "address_string": {
            "type": "string",
            "description": "Formatted address string (optional)"
        },
        "notes": {
            "type": "string",
            "description": "Additional notes about the location data (optional)"
        }
    }
}